{
  "manifest_version": 3,
  "name": "CW Scrapy",
  "version": "1.0.1",
  "description": "Web Scrapy da Cardápio Web para criação de listas",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "webNavigation"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.ico",
      "48": "icons/icon48.ico",
      "128": "icons/icon128.ico"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.anota.ai/*",
        "https://*.menudino.com/*",
        "https://*.ola.click/*"
      ],
      "js": [
        "papaparse.min.js",
        "scrapys/anotai.js",  
        "scrapys/menudino.js",
        "scrapys/ola-click.js",
        "handlerScrapy.js",
        "sheet_generation.js"
      ],
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icons/icon16.ico",
    "48": "icons/icon48.ico",
    "128": "icons/icon128.ico"
  }
}
